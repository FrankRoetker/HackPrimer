extends ./layout

block content
  form(action="/register",method="post").form-signin.card.head-room.center
    h2.form-singin-heading.center-text Register
    input(type='text', name='username', placeholder='Username', autofocus).form-control
    input(type='password', name='password', placeholder='Password').form-control
    button(type='submit', name='register-button').btn.btn-lg.btn-block Register