extends ./layout

block content
  div(ng-app, ng-controller='HomeCtrl', ng-init='init(#{JSON.stringify(post)})').page-width-max.center.padding-space
    div.card.head-room.center.padding-space
      div(ng-repeat='post in posts')
        h2 {{post.title}}
        h3 By: Dr. {{post.author}}
        h4 Written On: {{post.timestamp | date:'medium'}}
        div {{post.body}}

block head
  script(src="/javascripts/home.js")